<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="database.entity.UserProfile" table="userprofile">
    <!--
    http://www.mkyong.com/hibernate/hibernate-one-to-one-relationship-example/
    -->
    <id name="userId" type="java.lang.Integer">
        <column name="id" />
        <generator class="foreign">
            <param name="property">user</param>
        </generator>
    </id>
    <one-to-one name="user" class="database.entity.User" constrained="true">
    </one-to-one>
    <property name="firstName" type="string">
      <column length="45" name="firstname" not-null="true"/>
    </property>
    <property name="lastName" type="string">
      <column length="45" name="lastname" not-null="true"/>
    </property>
  </class>
</hibernate-mapping>